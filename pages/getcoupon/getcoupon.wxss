@import '/template/nodata/nodata.wxss';

.container {
  overflow: hidden;
  padding: 100rpx 20rpx 0;
  box-sizing: border-box;
}

/* 导航栏 */
.getcoupon_nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  font-size: 30rpx;
  padding: 20rpx 0;
  z-index: 10;
  border-bottom: 1px solid #f4f4f5;
  box-sizing: border-box;
}

.getcoupon_nav_btn {
  width: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.getcoupon_nav_btn:first-child {
  border-right: 1px solid #ccc;
}

.getcoupon_nav_btn_active {
  color: #ff2742;
  font-weight: 600;
}

/* 券列表内容 */
.getcoupon_list {
  width: 100%;
  background: #fff;
  display: flex;
  margin:20rpx 0;
}
.getcoupon_list_tip {
  width: 33%;
  position: relative;
  border-right: 1px dashed #ccc;
  display: flex;
  flex-direction:column;
  justify-content:center;
  align-items: center;
  padding: 30rpx 10rpx 40rpx;
}
.getcoupon_list_tip_money {
  font-size: 36px;
  line-height:1;
}
.getcoupon_list_tip_money_fh {
  font-size: 16px;
}
.getcoupon_list_tip_type {
  font-size: 14px;
}
.getcoupon_list_txt {
  width: 65%;
  display: flex;
  flex-direction:column;
  justify-content: space-between;
  padding: 50rpx 20rpx;
  font-size: 12px;
  position: relative;
}
.getcoupon_list_txt_img {
  width: 100rpx;
  position: absolute;
  right: 0;
  top: 0;
}
.getcoupon_list_txt_name {
  font-size: 16px;
}
.getcoupon_list_txt_name1 {
  font-size: 14px;
}
.getcoupon_list_txt_time {
  color: #888;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.getcoupon_list_txt_pos{
  background: #f8f8f8;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  position: absolute;
  left: -15rpx;
}

.getcoupon_list_isGet {
  position: absolute;
  padding:13rpx 20rpx;
  right: 10rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #fff;
  border-radius: 15px;
}

.getcoupon_list_isGet1 {
  background-color: #888 !important;
}

.getcoupon_list_isuse {
  position: absolute;
  right: 20rpx;
  top: 0;
  padding: 20rpx;
  color: #fff;
  border-radius: 0 0 5px 5px;
}