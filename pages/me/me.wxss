/* 头部 */
.me_top {
  width: 100%;
  box-sizing: border-box;
  background-color: #fff;
  padding: 0 40rpx;
  height: 212rpx;
  display: flex;
  align-items: center;
  position: relative;
  color: #fff;
}

.me_top_img {
  width: 150rpx;
  margin-right: 30rpx;
  border-radius: 50%;
  overflow: hidden;
}

.me_top_btn {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  opacity: 0;
  z-index: 10;
}

.me_top_name, .me_top_img {
  position: relative;
  z-index: 2;
}

.me_top_backImg {
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
  width: 100%;
}

/* 订单按钮 */
.me_order {
  margin: 20rpx 0;
  background-color: #fff;
  padding: 30rpx 40rpx;
  font-size: 30rpx;
}

.me_order_title {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.me_order_title_btn {
  display: flex;
  align-items: center;
  color: #676767;
}

.me_order_title_btn_img {
  width: 40rpx;
}

.me_order_btn {
  display: flex;
  align-items: center;
  margin-top: 60rpx;
}

.me_order_btn_icon {
  width: 25%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.me_order_btn_icon_img {
  width: 40%;
  margin-bottom: 10rpx;
}

/* 底部按钮 */
.me_bottom {
  background-color: #fff;
}

.me_bottom_btn {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 96rpx;
  font-size: 30rpx;
  border-top: 1px solid #f5f5f5;
  padding: 0 40rpx;
}

.me_bottom_btn:first-child {
  border-top: none;
}

.me_bottom_btn_icon {
  width: 40rpx;
}
