@import '/template/goodsList/goodsList.wxss';

.container {
  box-sizing: border-box;
  padding-bottom: 90rpx;
}

swiper, swiper-item {
  width: 100%;
  height: 100%;
}

button {
  margin: 0 !important;
  line-height: 1;
}

/* ------ 拼团商品 ------ */

/* 头部图片 */
.buyJoint_titleimg {
  width: 100%;
}

/* 头部消息提示 */
.buyJoint_topmsg {
  width: 100%;
  border-bottom: 1px solid #e4e4e4;
  border-top: 1px solid #e4e4e4;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.buyJoint_topmsg_box {
  width: 100%;
  height: 116rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  flex: none;
}

swiper-item {
  display: flex;
  align-items: center;
}

.buyJoint_topmsg_img {
  width: 54rpx;
  border-radius: 50%;
  margin-right: 10rpx;
  overflow: hidden;
  font-size: 28rpx;
}

.buyJoint_topmsg_txt {
  font-size: 30rpx;
  color: #656565;
}

/* 砍价商品 */
.content_goods_right_btn_left {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}

.content_goods_right_btn_left_text, .content_goods_right_btn_left_price {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  font-size: 25rpx;
}

.content_goods_right_btn_left_text_bigtext, .content_goods_right_btn_left_new {
  font-size: 35rpx;
  margin-top: 10rpx;
}

/* ------ 我的拼团 ------ */

/* 我的拼团商品 */
.mybuyJoint_goods {
  background-color: #fff;
  margin-top: 20rpx;
}

.mybuyJoint_goods_title {
  display: flex;
  font-size: 30rpx;
  padding-top: 20rpx;
  color: #666666;
}

.mybuyJoint_goods_title_piece {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
  border-radius: 0 3px 3px 0;
  background-color: rgba(000,000,000,.6);
}

.mybuyJoint_goods_top {
  padding: 30rpx;
  display: flex;
  border-bottom: 1px solid #e4e4e4;
}

.mybuyJoint_goods_top_left {
  width: 33.33%;
  border: 1px solid #e4e4e4;
}

.mybuyJoint_goods_top_right {
  width: 66.66%;
  box-sizing: border-box;
  padding-left: 20rpx;
  font-size: 35rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.mybuyJoint_goods_top_right_title {
  margin: 20rpx 0;
}

.mybuyJoint_goods_top_right_intr {
  font-size: 30rpx;
  display: flex;
  justify-content: space-between;
  color: #989898;
}

.mybuyJoint_goods_top_right_intr_left {
  line-height: 1.2;
}

.mybuyJoint_goods_top_right_bottom {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.mybuyJoint_goods_top_right_bottom {
  color: #989898;
  font-size: 28rpx;
}


.mybuyJoint_goods_bottom {
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: flex-end;
}

.mybuyJoint_goods_bottom_time {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  margin-right: 10rpx;
}

.mybuyJoint_goods_bottom_time_num {
  background-color: #efefef;
  padding: 10rpx;
  border-radius: 5px;
  margin: 5rpx;
  font-weight: 600;
}

.mybuyJoint_goods_bottom_btn {
  border-radius: 15px;
  font-size: 30rpx;
  padding: 15rpx 25rpx !important;
  color: #fff;
}

/* 导航栏 */
.buyJoint_nav {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  border-top: 1px solid #e4e4e4;
}

.buyJoint_nav_btn, .buyJoint_nav_back {
  height:100%;
  font-size: 30rpx;
  color: #9b9b9b;
  display: flex;
  justify-content: center;
  align-items: center;
}

.buyJoint_nav_btn {
  width: 40%;
}

.buyJoint_nav_back {
  width: 20%;
  flex-direction: column;
  justify-content: space-between;
  font-size: 25rpx;
  box-sizing: border-box;
  padding: 10rpx;
}

.buyJoint_nav_back_img {
  width: 40%;
}

.buyJoint_nav_btn:nth-child(2) {
  border-left: 1px solid #e4e4e4;
  border-right: 1px solid #e4e4e4;
}

/* 激活状态 */
.active {
  color: #fff;
  background-color:#ff2742;
}
