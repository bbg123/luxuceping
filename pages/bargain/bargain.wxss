@import '/template/goodsList/goodsList.wxss';
@import '/template/nodata/nodata.wxss';

.container {
  box-sizing: border-box;
  padding-bottom: 90rpx;
}

.swiper {
  position: relative;
}

/* -------- 砍价商品 --------- */

/* 头部图片 */
.bargain_titleimg {
  width: 100%;
}

/* 头部消息提示 */
.bargain_topmsg {
  width: 100%;
  border-bottom: 1px solid #e4e4e4;
  border-top: 1px solid #e4e4e4;
  background-color: #fff;
  display: flex;
}

.bargain_topmsg_box {
  width: 100%;
  height: 116rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  flex: none;
}

swiper-item {
  display: flex;
  align-items: center;
}

.bargain_topmsg_img {
  width: 54rpx;
  border-radius: 50%;
  margin-right: 10rpx;
  overflow: hidden;
}

.bargain_topmsg_txt {
  font-size: 28rpx;
  color: #656565;
}

/* 砍价商品 */
.bargain_content {}

/* --------- 我的砍价 -------- */

/* 商品 */
.mybargain_goods {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  background-color: #fff;
}

.mybargain_goods_top {
  display: flex;
  margin: 0 20rpx;
  padding: 20rpx 0;
  border-bottom: 1px solid #f1f1f1;
}

.mybargain_goods_top_left {
  width: 25%;
  position: relative;
}

.mybargain_goods_top_right {
  width: 75%;
  padding: 20rpx 0 0 20rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.mybargain_goods_top_right_top {
  width: 100%;
}

.mybargain_goods_top_right_intr {
  color: #b3b3b3;
  padding: 20rpx 0;
  line-height: 1.2;
}

.mybargain_goods_top_right_tips {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  font-size: 26rpx;
}

.mybargain_goods_top_right_tips_left_old {
  text-decoration:line-through;
  color: #636363;
}

.mybargain_goods_bottom {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 20rpx;
}

.mybargain_goods_bottom_time {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  margin-right: 10rpx;
}

.mybargain_goods_bottom_time_num {
  background-color: #efefef;
  padding: 10rpx;
  border-radius: 5px;
  margin: 5rpx;
  font-weight: 600;
}

.mybargain_goods_bottom_btn {
  color: #fff;
  font-size: 30rpx;
  padding: 15rpx 25rpx;
  border-radius: 15px;
  background-color: rgba(000,000,000,.6);
}

/* 导航栏 */
.bargain_nav {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  border-top: 1px solid #e4e4e4;
}

.bargain_nav_btn, .bargain_nav_back {
  height:100%;
  font-size: 30rpx;
  color: #9b9b9b;
  display: flex;
  justify-content: center;
  align-items: center;
}

.bargain_nav_btn {
  width: 40%;
}

.bargain_nav_back {
  width: 20%;
  flex-direction: column;
  justify-content: space-between;
  font-size: 25rpx;
  box-sizing: border-box;
  padding: 10rpx;
}

.bargain_nav_back_img {
  width: 40%;
}

.bargain_nav_btn:nth-child(2) {
  border-left: 1px solid #e4e4e4;
  border-right: 1px solid #e4e4e4;
}

/* 激活状态 */
.active {
  color: #fff;
  background-color:#ff2742;
}
