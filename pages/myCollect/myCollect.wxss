@import '/template/nodata/nodata.wxss';

.container {
  width: 100%;
  overflow: hidden;
  display: flex;
  flex-wrap: wrap;
}

.myCollect_goods {
  width: 47%;
  height: 490rpx;
  background-color: #fff;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #f4f4f4;
  margin-top: 20rpx;
  box-sizing: border-box;
  margin-left: 2%;
}

.myCollect_goods:nth-child(2n) {
  margin:20rpx 2% 0;
}

.myCollect_goods_right {
  box-sizing: border-box;
  font-size: 30rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.myCollect_goods_right_title {
  line-height: 1.2;
  margin: 10rpx 0;
}

.myCollect_goods_right_other {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}