swiper {
  height: 590rpx;
}
/* 提示 */
.bjInfo_tips {
  background-color: #ff4b49;
  color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  font-size: 30rpx;
  height: 90rpx;
  border-top: 1px solid #f5f5f4;
  box-sizing: border-box;
}

.bjInfo_tips_left {
  display: flex;
  align-items: center;
}

.bjInfo_tips_left_new {
  font-size: 50rpx;
  margin: 0 5rpx;
}

.bjInfo_tips_left_num_old {
  text-decoration: line-through;
  margin-bottom: 5rpx;
}

.bjInfo_tips_right {
  color: #f3b424;
}

/* 标题 */
.bjInfo_title {
  font-size: 35rpx;
  position: relative;
  padding: 30rpx 20rpx;
  background-color: #fff;
  text-indent: 120rpx;
  line-height: 1.2;
}

.bjInfo_title_icon {
  position: absolute;
  left: 20rpx;
  top: 30rpx;
  font-size: 25rpx;
  background-color: #fe4256;
  padding: 5rpx;
  text-indent:0;
  color: #fff;
}

/* 拼团 */
.bjInfo_team {
  padding: 0 10rpx;
  margin: 20rpx 0;
  font-size: 30rpx;
  background-color: #fff;
}

.bjInfo_team_title {
  color: #9a9a9a;
  padding: 30rpx 0;
}

.bjInfo_team_content {
  height: 120rpx;
  border-top: 1px solid #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.bjInfo_team_content_left, .bjInfo_team_content_right{
  display: flex;
  align-items: center;
}

.bjInfo_team_content_left_img {
  width: 80rpx;
  margin-right: 10rpx;
}

.bjInfo_team_content_left_text_sign {
  margin-top: 10rpx;
  color: #868686;
}

.bjInfo_team_content_right_tips_num {
  margin-bottom: 10rpx;
}

.bjInfo_team_content_right_btn {
  border: 1px solid #ff4740;
  border-radius: 5px;
  padding:10rpx;
  margin-left: 10rpx;
}

/* 图文详情 */
.bjInfo_imgtext {
  padding: 0 20rpx;
  background-color: #fff;
}

.bjInfo_imgtext_title {
  padding: 30rpx 0;
}

/* 底部操作栏 */
.bjInfo_bottom {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
}

.bjInfo_bottom_gohome, .bjInfo_bottom_collect {
  width: 20%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  font-size: 30rpx;
  border-right: 1px solid #f2f2f2;
}

.bjInfo_bottom_collect_img, .bjInfo_bottom_gohome_img {
  width: 40%;
}

.bjInfo_bottom_btn {
  width: 60%;
  display: flex;
  font-size: 35rpx;
}

.bjInfo_bottom_btn_white, .bjInfo_bottom_btn_red {
  width: 50%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.bjInfo_bottom_btn_white {
  background-color: #fff;
  color: #ff4b49;
}

.bjInfo_bottom_btn_red {
  background-color: #ff4b49;
  color: #fff;
}