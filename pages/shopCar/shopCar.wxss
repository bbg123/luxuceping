/* 没有数据的购物车样式 */
.shopCar_nodata {
  width: 90%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
}

.shopCar_nodata_icon {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 20rpx;
}

.shopCar_nodata_icon_img {
  width: 40%;
}

.shopCar_nodata_icon_text {
  color: #646465;
  font-size: 30rpx;
  margin-top: 15rpx;
}

.shopCar_nodata_btn {
  color: #fff;
  border-radius: 20px;
  text-align: center;
  padding: 20rpx 0;
}

/* 购物车内容 */
.shopCar_main {
  width: 100%;
  height: 100%;
  padding-bottom: 100rpx;
  box-sizing: border-box;
  overflow: hidden;
}
/* 中间内容 */

.shopCar_main_content_goods {
  display: flex;
  padding: 40rpx 20rpx;
  background-color: #fff;
  position: relative;
  margin-top: 20rpx;
}

.shopCar_main_content_goods:last-child {
  margin-bottom: 20rpx;
}

.shopCar_main_content_goods_left {
  width: 40%;
  display: flex;
}

.shopCar_main_content_goods_left_checked {
  width: 20%;
  display: flex;
  align-items: center;
}

.shopCar_main_content_goods_left_img {
  width: 80%;
  border: 1px solid #e5e5e5;
  box-sizing: border-box;
  margin-left: 20rpx;
}

.shopCar_main_content_goods_right {
  width: 60%;
  box-sizing: border-box;
  padding: 0 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 30rpx;
}

.shopCar_main_content_goods_right_title {
  color: #323232;
  margin: 10rpx 0;
  line-height: 1.2;
}

.shopCar_main_content_goods_right_color {
  color: #979797;
  line-height: 1.2;
  margin: 10rpx 0;
}

.shopCar_main_content_goods_right_bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 35rpx;
}

.shopCar_main_content_goods_right_bottom_btn {
  border: 1px solid #cccccc;
  width: 150rpx;
  height: 50rpx;
  border-radius: 5rpx;
  display: flex;
  justify-content: space-between;
  color: #ccc;
}

.shopCar_main_content_goods_right_bottom_btn_left, 
.shopCar_main_content_goods_right_bottom_btn_center,
.shopCar_main_content_goods_right_bottom_btn_right {
  width: 30%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn_active {
  color: #000;
}

.shopCar_main_content_goods_right_bottom_btn_center {
  border-left: 1px solid #cccccc;
  border-right: 1px solid #cccccc;
  color: #000;
  width: 40%;
}

.shopCar_main_content_goods_right_close {
  width: 30rpx;
  position: absolute;
  right: 15rpx;
  top: 5rpx;
  padding: 15rpx;
}

/* 底部按钮 */
.shopCar_main_bottombtn {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  border-top: 1px solid #f5f5f4;
  box-sizing: border-box;
}

.shopCar_main_bottombtn_left {
  width: 65%;
  height: 100%;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding-left: 20rpx;
}

.shopCar_main_bottombtn_left_btn {
  width: 30%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
  color: #ccc;
}

.shopCar_main_bottombtn_left_btn_img {
  width: 30%;
}

.shopCar_main_bottombtn_left_price {
  width: 70%;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding-right: 20rpx;
}

.shopCar_main_bottombtn_left_price_num {
  font-size: 30rpx;
}

.shopCar_main_bottombtn_right {
  width: 35%;
  height: 100%;
  background-color: #16b015;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
}

